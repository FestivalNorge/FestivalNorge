{
  "extends": "./tsconfig.node.json",
  "compilerOptions": {
    "module": "ES2022",
    "outDir": "./dist/scripts",
    "rootDir": ".",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "target": "ES2022"
  },
  "include": [
    "scripts/**/*.ts",
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.test.ts",
    "src/**/*.spec.ts"
  ]
}
